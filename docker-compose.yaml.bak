version: '3.8'
#we need to add Flask-SQLAlchemy and psycopg2-binary as we are using postgres sql
#adding Volume to store persistent data for the database which is getting deployed as a dependent service to payment service
volumes:
  payment-db-vol:

services:
  payment-service:
    build: .
    environment:
      POSTGRES_USER: myUser
      POSTGRES_PASSWORD: myPassword
      POSTGRES_DB: payment_db
    ports:
      - "6000:5000"
    depends_on: #as payment-service container needs backend database to save data. Hence it needs depends on
      - payment-db
  payment-db:
    image: postgres:14.2-alpine #since it is pre-existing image from docker hub we doesn't need to build.
    environment:
      POSTGRES_USER: myUser
      POSTGRES_PASSWORD: myPassword
      POSTGRES_DB: payment_db
    ports:
      - "5432:5432" #port conflict for payment-service and payment-db, hence re-mapped postgres with its native port 5432
    volumes:
      - payment-db-vol:/var/lib/postgresql/data
